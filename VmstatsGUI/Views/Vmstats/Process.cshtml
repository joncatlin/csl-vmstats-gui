@model VmstatsGUI.Request

@{
    ViewData["Title"] = "Index";
}

<h2>Step: Processing</h2>

<form asp-action="Process">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="FromDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control">
                    @Html.DisplayFor(model => model.FromDate)
                </p>
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ToDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control">
                    @Html.DisplayFor(model => model.ToDate)
                </p>
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VmPattern" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control">
                    @Html.DisplayFor(model => model.VmPattern)
                </p>
                <span asp-validation-for="VmPattern" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Dsl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p class="form-control">
                    @Html.DisplayFor(model => model.Dsl)
                </p>
                <span asp-validation-for="Dsl" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Start</a>
</div>

<hr />

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            User..........<input type="text" id="userInput" />
            <br />
            Message...<input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/vmstats.js"></script>
@*<script src="~/js/es5-chat.js"></script>*@



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}